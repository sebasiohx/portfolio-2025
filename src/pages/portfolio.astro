<style lang="scss">
  .catalog {
    columns: 18vw 1; //18vw 4
    column-gap: 1rem;

    &__item {
      margin-bottom: 1rem;
    }
    &__figure {
      overflow: hidden;
      display: inline-block;
      padding: 1px;
      background-color: var(--color-main-1);
      clip-path: polygon(10px 0, 100% 0, 100% calc(100% - 10px), calc(100% - 10px) 100%, 0 100%, 0 10px);
    }
    &__link {
      position: relative;
      width: 100%;
      height: 100%;
      font-family: var(--font-family-2);
      font-size: 1rem;
      color: var(--color-text);
      display: flex;
      flex-direction: row;
      justify-content: start;
      align-items: start;
      transition: background-color 0.2s ease-in-out;
      clip-path: polygon(10px 0, 100% 0, 100% calc(100% - 10px), calc(100% - 10px) 100%, 0 100%, 0 10px);
    }
    &__image {}
    &__caption {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: linear-gradient(180deg, var(--color-bg) 25%, transparent 200%); //20%
      padding: 3rem 1rem;
      display: flex;
      flex-direction: column;
      justify-content: space-between;
      align-items: center;
      opacity: 1;
      transition: opacity 0.2s ease-in-out;
    }
    &__title {
      font-family: var(--font-family-2);
      font-size: 22px;
      background-color: var(--color-bg);
      padding: 2px 8px;
      font-weight: bolder;
      text-decoration: overline;
      text-decoration-color: var(--color-main-1);
      text-shadow: var(--color-main-1) 0px 0px 2px;
    }
    &__cross {
      /*font-size: 50px;
      font-weight: lighter;
      color: var(--color-main-1);*/
      width: 70px;
      height: 2px;
      display: block;
      background-color: var(--color-main-1);
      position: absolute;
      bottom: 40%; // top: 50%

      &--2{
        transform: rotate(90deg);
      }
    }

    @media screen and (768px <= width < 1024px) {
      columns: 18vw 2;

      &__caption {
        background: linear-gradient(180deg, var(--color-bg) 10%, transparent 200%);
      }
    }
    
    @media screen and (width >= 1024px) and (hover: hover) {
      &__caption {
        opacity: 0;
        &:hover {
          opacity: 1;
          transition: opacity 0.2s ease-in-out;
        }
      }
    }
    @media screen and (width >= 1024px) {
      columns: 18vw 3;
    }
    @media screen and (width >= 1280px) {
      columns: 18vw 4;
    }
  }
</style>