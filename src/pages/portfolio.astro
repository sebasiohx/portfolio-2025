<script>
// Hacer que los elementos del catálogo tengan la mitad de su altura
document.addEventListener('DOMContentLoaded', () => {
  const elementosMitad = document.querySelectorAll('.catalog__figure');
  
  elementosMitad.forEach((elementoMitad) => {
    if (elementoMitad instanceof HTMLElement) {
      const alturaContenedor = elementoMitad.offsetHeight;
      const mitadAltura = alturaContenedor / 3;
      elementoMitad.style.height = mitadAltura + 'px';
      console.log(elementoMitad.style.height);
    }
  });
});
</script>

