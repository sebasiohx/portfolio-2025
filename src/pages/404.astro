---
import LayoutSimple from '../layouts/LayoutSimple.astro';
import Hero from '@components/Hero.astro';
---

<LayoutSimple title='SebaOlateH | Acerca de mi'>
  <main class="content-404">
    <div class='bg bg__bg1'></div>
    <div class='bg bg__bg2'></div>
    <div class='content-404__container'>
      <div class='cartridge black-bg-small'>緊急</div>
      <div class='content-404__content black-bg'>
        <span class='secondary'>CODE: 404</span>
        <h1 class='bigtext'>EMERGENCY</h1>
        <span class='secondary'>PÁGINA NO ENCONTRADA</span>
      </div>
      <a href="javascript:history.back()" class='cartridge cartridge__btn black-bg-small'>VOLVER</a>
    </div>
  </main>
</LayoutSimple>

<style lang="scss">
  .content-404 {
    color: var(--color-main-3);
    display: block;
    height: 90vh;
    width: 100%;
    padding: 0;
    margin: 0;
    font-family: var(--font-family-2);
    filter: blur(1px);
    line-height: 1rem;
    overflow: hidden;

    &__container {
      height: 100%;
      width: 100%;
      display: flex;
      align-items: center;
      justify-content: center;
      flex-direction: column;
      align-items: center;
      text-align: center;
      gap: 2rem;
    }
    &__content {
      position: relative;
      width: 100%;
      border-top: 15px solid #ce212b;
      border-bottom: 15px solid #ce212b;
      box-shadow: 0 0 10px #ce212b, 0 0 10px #ce212b inset;
      background-color: var(--color-bg);
      display: flex;
      flex-direction: column;
      gap: 1rem;
      padding: 1.5rem 0;
      text-shadow: 0 0 10px;
    }
  }
  .bg {
    display: block;
    content: '';
    width: 50%;
    height: 100%;
    position: absolute;
    z-index: -2;
    animation: blink 2s linear infinite;

    &__bg1 {
      top: 0;
      left: 0;
      background: repeating-linear-gradient(
        -45deg,
        var(--color-bg),
        var(--color-bg) 100px,
        var(--color-main-3) 101px,
        var(--color-main-3) 103px,
        var(--color-main-3) 200px,
        var(--color-main-3) 202px
      );
    }
    &__bg2 {
      top: 0;
      right: 0;
      background: repeating-linear-gradient(
        45deg,
        var(--color-bg),
        var(--color-bg) 100px,
        var(--color-main-3) 101px,
        var(--color-main-3) 103px,
        var(--color-main-3) 200px,
        var(--color-main-3) 202px
      );
    }
  }
  
  .black-bg:after {
    position: absolute;
    display: block;
    content: '';
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    z-index: -1;
    background: var(--color-bg);
    box-shadow: 0 0 2px 40px var(--color-bg);
  }
  .black-bg-small:after {
    position: absolute;
    display: block;
    content: '';
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    z-index: -1;
    background: var(--color-bg);
    box-shadow: 0 0 2px 15px var(--color-bg);
    border-radius: 5px;
  }
  .bigtext {
    padding: 0;
    margin: 0;
    font-size: 5rem;
    line-height: 8rem;
    font-family: var(--font-family-2);
    animation: scroll 5s linear infinite;
  }
  .secondary {
    opacity: 0.75;
    font-size: 3rem;
    font-family: var(--font-family-2);
  }
  .cartridge {
    position: relative;
    display: inline-block;
    border: 5px solid var(--color-main-3);
    border-radius: 10px;
    padding: 10px;
    font-size: 2rem;
    font-weight: bold;
    line-height: 2rem;
    background-color: var(--color-bg);
    color: var(--color-main-3);

    &__btn {
      transition: all 0.2s ease-in-out;
      &:hover {
        background-color: var(--color-main-3);
        color: var(--color-bg);
        box-shadow: 0 0 10px var(--color-main-3), 0 0 10px var(--color-main-3) inset;
      }
    }
  }


  @keyframes scroll {
    from {
      transform: translateX(80vw);
    }
    to {
      transform: translateX(-80vw);
    }
  }
  @keyframes blink {
    0% {
      opacity: 1;
    }
    40% {
      opacity: 0;
    }
    60% {
      opacity: 0;
    }
    100% {
      opacity: 1;
    }
  }

:global([data-theme="light"]) {
  .cartridge {
    color: var(--color-text);
  }
}
</style>
