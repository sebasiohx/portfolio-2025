---
import SimpleLayout from '../layouts/SimpleLayout.astro';
---

<SimpleLayout title='SebaOlateH | Acerca de mi'>
  <main class="content-404">
    <div class='bg bg__bg1'></div>
    <div class='bg bg__bg2'></div>
    <section class='content-404__container'>
      <!-- <div class="blur-[1px]">
        <div class='cartridge black-bg-small'>緊急</div>
      </div> -->
      <div class='content-404__content black-bg'>
        <h1 class='secondary'>ERROR: 404</h1>
        <div
          class='warning-slider'
          style='
          --width: 500px;
          --quantity: 4;
          '>
          <div class='warning-slider__list'>
            <div class='warning-slider__item' style='--position: 1'>
              <h2 class='warning-slider__text bigtext'>EMERGENCY</h2>
            </div>
            <div class='warning-slider__item' style='--position: 2'>
              <h2 class='warning-slider__text bigtext'>EMERGENCY</h2>
            </div>
            <div class='warning-slider__item' style='--position: 3'>
              <h2 class='warning-slider__text bigtext'>EMERGENCY</h2>
            </div>
            <div class='warning-slider__item' style='--position: 4'>
              <h2 class='warning-slider__text bigtext'>EMERGENCY</h2>
            </div>
          </div>
        </div>
        <h3 class='secondary'>PÁGINA NO ENCONTRADA</h3>
      </div>
      <a href="javascript:history.back()" class='cartridge cartridge__btn black-bg-small'>VOLVER</a>
    </section>
  </main>
</SimpleLayout>

<style lang="scss">
  .content-404 {
    color: var(--color-main-3);
    display: block;
    height: 100dvh; //90vh
    width: 100%;
    padding: 0;
    margin: 0;
    font-family: var(--font-family-2);
    line-height: 1rem;
    overflow: hidden;

    &__container {
      height: 100%;
      width: 100%;
      display: flex;
      align-items: center;
      justify-content: center;
      flex-direction: column;
      align-items: center;
      text-align: center;
      gap: 2rem;
    }
    &__content {
      position: relative;
      width: 100%;
      border-top: 15px solid var(--color-main-4);
      border-bottom: 15px solid var(--color-main-4);
      box-shadow: 0 0 10px var(--color-main-4), 0 0 10px var(--color-main-4) inset;
      background-color: var(--color-bg);
      display: flex;
      flex-direction: column;
      gap: 1rem;
      padding: 1.2rem 0; //1.5rem
      text-shadow: 0 0 10px;
    }
    @media screen and (width >= 768px){
      height: 90vh;
      &__content {
        padding: 1.5rem 0;
      }
    }
  }
  .bg {
    display: block;
    content: '';
    width: 50%;
    height: 100%;
    position: absolute;
    z-index: -2;
    animation: blink 2s linear infinite;

    &__bg1 {
      top: 0;
      left: 0;
      background: repeating-linear-gradient(
        -45deg,
        var(--color-bg),
        var(--color-bg) 100px,
        var(--color-main-3) 101px,
        var(--color-main-3) 103px,
        var(--color-main-3) 200px,
        var(--color-main-3) 202px
      );
    }
    &__bg2 {
      top: 0;
      right: 0;
      background: repeating-linear-gradient(
        45deg,
        var(--color-bg),
        var(--color-bg) 100px,
        var(--color-main-3) 101px,
        var(--color-main-3) 103px,
        var(--color-main-3) 200px,
        var(--color-main-3) 202px
      );
    }
  }
  
  .black-bg:after {
    position: absolute;
    display: block;
    content: '';
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    z-index: -1;
    background: var(--color-bg);
    box-shadow: 0 0 2px 40px var(--color-bg);
  }
  .black-bg-small:after {
    position: absolute;
    display: block;
    content: '';
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    z-index: -1;
    background: var(--color-bg);
    box-shadow: 0 0 2px 15px var(--color-bg);
    border-radius: 5px;
  }
  .bigtext {
    padding: 0;
    margin: 0;
    font-size: 5rem;
    line-height: 8rem;
    filter: blur(1px);
  }
  .secondary {
    opacity: 0.75;
    font-size: 1.6rem; //3rem
    filter: blur(1px);

    @media screen and (width >= 768px){
      font-size: 3rem;
    }
  }
  .cartridge {
    position: relative;
    display: inline-block;
    border: 5px solid var(--color-main-3);
    border-radius: 10px;
    padding: 10px;
    font-size: 2rem;
    font-weight: bold;
    line-height: 2rem;
    background-color: var(--color-bg);
    color: var(--color-main-3);
    text-shadow: 0 0 10px;

    &__btn {
      transition: all 0.2s ease-in-out;
      &:hover {
        background-color: var(--color-main-3);
        color: var(--color-bg);
        box-shadow: 0 0 10px var(--color-main-3), 0 0 10px var(--color-main-3) inset;
      }
    }
  }

  .warning-slider {
    --height: 80px; //128px
    width: 100%;
    height: var(--height);
    overflow: hidden;
    position: relative;

    &:hover .warning-slider__item {
      animation-play-state: paused;
    }

    &__list {
      display: flex;
      width: 100%;
      min-width: calc(var(--width) * var(--quantity));
      position: relative;
    }
    &__item {
      width: var(--width);
      height: var(--height);
      position: absolute;
      left: 100%;
      display: flex;
      justify-content: center;
      align-items: center;
      animation: autoRun 10s linear infinite;
      transition: filter 0.5s;
      animation-delay: calc(
        (10s / var(--quantity)) * (var(--position) - 1) - 10s
      );
    }

    @keyframes autoRun {
      from {
        left: 100%;
      }
      to {
        left: calc(var(--width) * -1);
      }
    }
    @media screen and (width >= 768px){
      --height: 128px;
    }
  }
  @keyframes blink {
    0% {
      opacity: 1;
    }
    40% {
      opacity: 0;
    }
    60% {
      opacity: 0;
    }
    100% {
      opacity: 1;
    }
  }

:global([data-theme="light"]) {
  .cartridge {
    color: var(--color-text);
    text-shadow: unset;
    box-shadow: inset var(--color-main-3) 0 0 10px;
  }
}
</style>
