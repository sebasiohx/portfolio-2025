<style lang="scss" define:vars={{ 
  bgImgContact1: `url("${bgImageTokyo3.src}")`,
  bgImgContact2: `url("${bgImageClouds.src}")`,
}}>
  .contact {
    background-image: var(--bgImgContact1);
    background-size: cover;
    background-attachment: fixed;
    position: relative;
    width: 100%;
    height: 80vh;
    overflow: hidden;
  }

  .octahedron {
    --p: 0;
    position: absolute;
    z-index: 0;
    width: 100%;
    height: 100%;
    inset: 0;
    overflow: hidden;
    perspective: 25em;
    perspective-origin: 50% calc(45% - 1em);

    &__container {
      --i: 0;
      --j: 0;
      position: absolute;
      top: 50%;
      left: 50%;
      transform-style: preserve-3d;
      animation: rot 10s linear calc((var(--p) - 1)*10s) infinite;
    }
    &__face {
      position: absolute;
      margin: -14.43376vmin;
      padding: 14.43376vmin;
      transform: rotatey(calc(var(--i)*-1turn/4)) rotate(calc((1 - var(--j))*.5turn)) rotatex(35.26439deg) translatez(10.20621vmin);
      background: rgba(var(--color-main-2-rgb), .8);
      filter: brightness(calc(.8 + var(--j)*.1));
      --shape: polygon(50% 0%, 93.30127% 75%, 6.69873% 75%);
      clip-path: var(--shape);
      animation: shade 5s ease-in-out calc((var(--p) - var(--i)/4)*10s) infinite alternate;
      animation-play-state: inherit;

      &:nth-child(n + 5) {
        --j: 1;
      }
      &:nth-child(4n + 2) {
        --i: 1;
      }
      &:nth-child(4n + 3) {
        --i: 2;
      }
      &:nth-child(4n + 4) {
        --i: 3;
      }
    }
    @keyframes rot {
      0% {
        transform: rotatey(1turn);
      }
    }
    @keyframes shade {
      to {
        filter: brightness(calc(.5 + var(--j)*.1));
      }
    }
  }
  .crosses {
    position: absolute;
    z-index: 1;
    inset: 0;
    width: 100%;
    height: 100%;
    background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 49 49">   <rect x="19" y="24" height="1" width="11" style="fill: rgba(228, 233, 243, 0.5);"></rect>   <rect x="24" y="19" height="11" width="1" style="fill: rgba(228, 233, 243, 0.5);"></rect> </svg>');
    background-size: 110px;
    background-repeat: space;
  }
  .slider-recommendations.splide{
    position: relative;
    z-index: 2;
    background-color: tomato;

    .custom__pagination{
      display: flex;
      justify-content: center;
      align-items: center;
      gap: 1rem;
      margin: 0;
      pointer-events: none;
    }
    .pagination-dot {
      width: 1rem;
      height: 1rem;
      border-radius: 50%;
      background-color: var(--color-bg);
      border: 2px solid var(--color-main-2);
      cursor: pointer;
      pointer-events: auto;

      &:hover, &.active {
        background-color: var(--color-main-2);
      }
    }
  }
</style>
