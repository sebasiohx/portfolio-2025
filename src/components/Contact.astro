---
import Icon from '@components/Icon.astro';
import bgImageTokyo3 from '@images/Tokyo-3.jpeg';
import bgImageClouds from '@images/bg-nubes.jpg';
---
<script>
	import Splide from '@splidejs/splide';

  document.addEventListener('DOMContentLoaded', () => {
    const splide = new Splide('#slider-recommendations', {
      type: 'loop',
			autoplay: true, //true
			perPage: 1,
			perMove: 1,
      pagination: true,
      arrows: true,
      breakpoints: {
        768: {
          perPage: 1,
          pagination: false,
          arrows: false,
        },
        1024: {
          perPage: 2,
        },
      },
    });

    splide.mount();
  });
</script>

<section class='contact'>
<!-- <p>Si tienes alguna pregunta o comentario, no dudes en contactarnos a través de nuestro correo electrónico: </p> -->
  <div class="octahedron">
    <div class="octahedron__container">
      <div class="octahedron__face"></div>
      <div class="octahedron__face"></div>
      <div class="octahedron__face"></div>
      <div class="octahedron__face"></div>
      <div class="octahedron__face"></div>
      <div class="octahedron__face"></div>
      <div class="octahedron__face"></div>
      <div class="octahedron__face"></div>
    </div>
  </div>
  <div class="crosses"></div>
  <div class='container mx-auto px-2 md:px-4'>
    <div class="contact__content">
      <article class="recommendations">
        <h3>Recomendaciones</h3>
        <div id="slider-recommendations" class="slider-recommendations splide">
          <div class="splide__track">
						<ul class="splide__list">
              <li class="splide__slide">1 Hola mundo</li>
              <li class="splide__slide">2 Hola mundo</li>
              <li class="splide__slide">3 Hola mundo</li>
            </ul>

            <div class="splide__arrows">
              <button class="splide__arrow splide__arrow--prev" title="trabajo anterior">
                <Icon icon='arrowSlider' size={40} color='var(--color-bg)'/>
              </button>
              <button class="splide__arrow splide__arrow--next" title="trabajo siguiente">
                <Icon icon='arrowSlider' size={40} color='var(--color-bg)'/>
              </button>
            </div>
          </div>
        </div>
      </article>
      <article class="contact-links">
        <h3>Links de contacto</h3>
      </article>
    </div>
  </div>
</section>

<style lang="scss" define:vars={{ 
  bgImgContact1: `url("${bgImageTokyo3.src}")`,
  bgImgContact2: `url("${bgImageClouds.src}")`,
}}>
  .contact {
    background-image: var(--bgImgContact1);
    background-size: cover;
    background-attachment: fixed;
    position: relative;
    width: 100%;
    height: 80vh;
    overflow: hidden;
  }

  .octahedron {
    --p: 0;
    position: absolute;
    z-index: 0;
    width: 100%;
    height: 100%;
    inset: 0;
    overflow: hidden;
    perspective: 25em;
    perspective-origin: 50% calc(45% - 1em);

    &__container {
      --i: 0;
      --j: 0;
      position: absolute;
      top: 50%;
      left: 50%;
      transform-style: preserve-3d;
      animation: rot 10s linear calc((var(--p) - 1)*10s) infinite;
    }
    &__face {
      position: absolute;
      margin: -14.43376vmin;
      padding: 14.43376vmin;
      transform: rotatey(calc(var(--i)*-1turn/4)) rotate(calc((1 - var(--j))*.5turn)) rotatex(35.26439deg) translatez(10.20621vmin);
      background: rgba(var(--color-main-2-rgb), .8);
      filter: brightness(calc(.8 + var(--j)*.1));
      --shape: polygon(50% 0%, 93.30127% 75%, 6.69873% 75%);
      clip-path: var(--shape);
      animation: shade 5s ease-in-out calc((var(--p) - var(--i)/4)*10s) infinite alternate;
      animation-play-state: inherit;

      &:nth-child(n + 5) {
        --j: 1;
      }
      &:nth-child(4n + 2) {
        --i: 1;
      }
      &:nth-child(4n + 3) {
        --i: 2;
      }
      &:nth-child(4n + 4) {
        --i: 3;
      }
    }
    @keyframes rot {
      0% {
        transform: rotatey(1turn);
      }
    }
    @keyframes shade {
      to {
        filter: brightness(calc(.5 + var(--j)*.1));
      }
    }
  }
  .crosses {
    position: absolute;
    z-index: 1;
    inset: 0;
    width: 100%;
    height: 100%;
    background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 49 49">   <rect x="19" y="24" height="1" width="11" style="fill: rgba(228, 233, 243, 0.5);"></rect>   <rect x="24" y="19" height="11" width="1" style="fill: rgba(228, 233, 243, 0.5);"></rect> </svg>');
    background-size: 110px;
    background-repeat: space;
  }
  .slider-recommendations.splide{
    position: relative;
    z-index: 2;
    background-color: tomato;
  }
</style>
