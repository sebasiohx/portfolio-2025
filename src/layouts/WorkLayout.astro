---
import MetaData from '@components/MetaData.astro';
import Loading from '@components/Loading.astro';
import Header from '@components/Header.astro';
import Contact from '@components/Contact.astro';
import Footer from '@components/Footer.astro';
import imgOG from 'src/assets/imagen-og-seba-olate.jpg';
import '@styles/global.css';
import '@splidejs/splide/css/core';
//import '@splidejs/splide/css';

interface Props {
	title?: string;
}
const { title } = Astro.props;
const urlPath = Astro.url.pathname;
---

<!doctype html>
<html lang="es" data-theme="dark">
	<head>
		<MetaData titlePage={title ?? 'Front-end developer'} image={imgOG.src} />
	</head>
	<body>
		<Loading />
		<Header currentPath={urlPath} />
		<!-- contenido -->
		<slot />

		<div class="text-center mb-16">
			<a href="/portfolio" class="btn-main btn-portfolio">
				<span class="btn-main__content">Ver m√°s trabajos</span>
			</a>
		</div>
		<Contact />
		<Footer />
	</body>
</html>

<style lang="scss">
	.btn-portfolio {
		background-color: var(--color-main-1);

		.btn-main__content {
			font-size: var(--size-20px);
		}
		&:hover {
			.btn-main__content {
				background: linear-gradient(0deg, var(--color-main-1-d3) 0%, var(--color-main-1) 20%);
				color: var(--color-bg);
			}
		}

		@media screen and (width >= 768px) {
			width: 18rem;
		}
	}
</style>