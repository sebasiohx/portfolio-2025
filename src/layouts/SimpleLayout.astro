---
import { AstroFont } from "astro-font";
import { siteConfig } from 'src/config/site-config';
import Header from '@components/Header.astro';
import Footer from '@components/Footer.astro';
import '@styles/global.css';

interface Props {
	title?: string;
}
const { title } = Astro.props;
const urlPath = Astro.url.pathname;
---

<!doctype html>
<html lang="es" data-theme="dark">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" href="/favicon-solate-2025.png" />
		<meta name="generator" content={Astro.generator} />
		<title>{siteConfig.title} | {title ?? 'Front-end developer'}</title>
		<AstroFont
      config={[
        {
          src: [],
          name: "Share Tech Mono",
          // Google Fonts URL
          googleFontsURL: 'https://fonts.googleapis.com/css2?family=Share+Tech+Mono&display=swap',
          preload: true,
          display: "swap",
          selector: ".monotype",
          fallback: "monospace",
        },
      ]}
    />
		<script src="https://kit.fontawesome.com/a236ea0636.js" crossorigin="anonymous"></script>
	</head>
	<body>
		<Header currentPath={urlPath} />
		<!-- contenido -->
		<slot />

		<Footer />
	</body>
</html>
